<h1>Editing item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :model_name_id %><br />
    <%= f.text_field :model_name_id %>
  </p>
  <p>
    <%= f.label :room_id %><br />
    <%= f.text_field :room_id %>
  </p>
  <p>
    <%= f.label :barcode %><br />
    <%= f.text_field :barcode %>
  </p>
  
  <p>
    <%= f.label :purchase_date %><br />
    <%= f.date_select :purchase_date %>
  </p>
  <p>
    <%= f.label :warranty_period %><br />
    <%= f.text_field :warranty_period %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

