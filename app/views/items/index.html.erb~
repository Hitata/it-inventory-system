<h1>Listing items</h1>

<table>
  <tr>
    <th>Manufacturer</th>
    <th>Model</th>
    <th>Room</th>
    <th>Unique</th>

  </tr>

<% for item in @items %>
  <tr>
    <td><%=h Manufacturer.find(item.manufacturer_id).name %></td>
    <td><%=h ModelNames.find(item.model_id).name %></td>
    <td><%=h Room.find(item.room_id).number %></td>
    <td><%=h item.unique %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

