<h1>Listing items</h1>

<table>
  <tr>
    <th>Manufacturer</th>
    <th>Model</th>
    <th>Room</th>
    <th>barcode</th>

  </tr>

<% for item in @items %>
  <tr>
    <td><%=h item.manufacturer.name %></td>
    <td><%=h item.model_name.name %></td>
    <td><%=h item.room.number %></td>
    <td><%=h item.barcode %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

